<h1>Coder's Block</h1>
<h3>Confessions of a Developing Developer</h3>

<%= link_to 'New Blog', "blogs/new" %>

<% @blogs.each do |blog| %>
<div class="blog">

  <h3>Title:</h3>
    <p class="name"><%= blog.name %></p>

  <h3>Framework(s):</h3>
    <p class="framework"><%=  blog.framework %></p>
    <p class="message"><%= blog.message %></p>
  <p class="time"><%= blog.created_at %></p>
</div>


<%= button_to "Bye Blog", blogs_path, method: :destroy%>
<%= button_to 'Edit Blog', 'blogs#edit' %>
<% end %>
